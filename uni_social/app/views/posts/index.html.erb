<h1 class="mb-4">News Feed</h1>

<% if user_signed_in? %>
  <div class="mb-4">
    <%= link_to "Write a post", new_post_path, class: "btn btn-primary" %>
  </div>
<% end %>

<div class="row g-3">
  <% @posts.each do |post| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">
            <%= link_to truncate(post.body.to_s, length: 80), post_path(post), class: "stretched-link text-decoration-none" %>
          </h5>
          <p class="card-text text-body-secondary mb-2"><%= truncate(post.body.to_s, length: 140) %></p>
          <div class="mt-auto small text-muted">
            by <%= post.user&.email || "Unknown" %> â€¢ <%= time_ago_in_words(post.created_at) %> ago
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>