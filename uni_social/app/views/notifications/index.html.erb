<h1 class="mb-3">Notifications</h1>

<div class="mb-3">
  <%= button_to "Mark all as read", mark_all_read_notifications_path,
                method: :post,
                class: "btn btn-sm btn-outline-secondary" %>
</div>

<% if @notifications.any? %>
  <div class="list-group">
    <% @notifications.each do |n| %>
      <%= render partial: "notification", locals: { n: n } %>
    <% end %>
  </div>
<% else %>
  <div class="text-muted">No notifications yet.</div>
<% end %>
